# Database Configuration
# Options: "sqlite", "supabase"
DATABASE_TYPE=sqlite

# SQLite Configuration (jika DATABASE_TYPE=sqlite)
DATABASE_URL=sqlite:///mlops_app.db

# Supabase Configuration (jika DATABASE_TYPE=supabase)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-api-key

# MLflow Configuration (opsional)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=text-ai-system

# Application Configuration
APP_TITLE=Sistem AI Berbasis Teks
APP_ICON=ðŸ¤–
MAX_INPUT_LENGTH=5000
MIN_INPUT_LENGTH=3

# Model Configuration
DEFAULT_MODEL_VERSION=v1

# Logging Configuration
LOG_FILE=app.log
LOG_LEVEL=INFO

# Monitoring Configuration
PREDICTION_HISTORY_LIMIT=10
LATENCY_THRESHOLD_MS=5000.0

# Database Retry Configuration
DB_MAX_RETRIES=3
