# Database Configuration
# Options: "sqlite", "supabase"
DATABASE_TYPE=sqlite

# SQLite Configuration (if DATABASE_TYPE=sqlite)
DATABASE_URL=sqlite:///mlops_app.db

# Supabase Configuration (if DATABASE_TYPE=supabase)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=text-ai-system

# Application Configuration
APP_TITLE=InsightText
APP_ICON=ðŸ”Ž
MAX_INPUT_LENGTH=5000
MIN_INPUT_LENGTH=3

# Model Configuration
DEFAULT_MODEL_VERSION=v1

# Logging Configuration
LOG_FILE=app.log
LOG_LEVEL=INFO

# Monitoring Configuration
PREDICTION_HISTORY_LIMIT=10
LATENCY_THRESHOLD_MS=5000.0

# Database Retry Configuration
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1.0

# Privacy Configuration
ENABLE_PII_DETECTION=true

# Admin Configuration (for Maintenance/Retraining access)
# IMPORTANT: Change this password in production!
ADMIN_PASSWORD=change_me_in_production

# GitHub Integration (for CI/CD)
# Get token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=your-username/your-repo
